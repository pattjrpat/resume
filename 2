    <script>
        function addRange() {
            const container = document.getElementById('rangeContainer');
            const ranges = container.getElementsByClassName('range-item');
            const lastRange = ranges[ranges.length - 1];
            const lastEnd = parseInt(lastRange.querySelector('.range-end').value);

            const newRange = document.createElement('div');
            newRange.className = 'range-item';
            newRange.innerHTML = `
                <div class="input-group">
                    <label>‡πÑ‡∏°‡πâ‡∏ó‡∏µ‡πà‡πÄ‡∏£‡∏¥‡πà‡∏°:</label>
                    <input type="number" class="range-start" value="${lastEnd + 1}" min="1">
                </div>
                <div class="input-group">
                    <label>‡πÑ‡∏°‡πâ‡∏ó‡∏µ‡πà‡∏™‡∏¥‡πâ‡∏ô‡∏™‡∏∏‡∏î:</label>
                    <input type="number" class="range-end" value="${lastEnd + 100}" min="1">
                </div>
                <div class="input-group">
                    <label>‡∏£‡∏∞‡∏¢‡∏∞‡∏´‡πà‡∏≤‡∏á (‡∏à‡∏∏‡∏î):</label>
                    <input type="number" class="range-distance" value="400" step="100" min="100">
                </div>
                <button class="remove-range-btn" onclick="removeRange(this)">‚ùå</button>
            `;
            container.appendChild(newRange);
            updateRemoveButtons();
        }

        function removeRange(btn) {
            btn.parentElement.remove();
            updateRemoveButtons();
        }

        function updateRemoveButtons() {
            const ranges = document.getElementsByClassName('range-item');
            const removeButtons = document.getElementsByClassName('remove-range-btn');
            
            for (let btn of removeButtons) {
                btn.style.display = ranges.length > 1 ? 'block' : 'none';
            }
        }

        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            errorDiv.textContent = message;
            errorDiv.style.display = 'block';
            setTimeout(() => {
                errorDiv.style.display = 'none';
            }, 5000);
        }

        function validateRanges(ranges, numberOfTrades) {
            const sorted = ranges.sort((a, b) => a.start - b.start);
            
            for (let i = 0; i < sorted.length; i++) {
                const range = sorted[i];
                
                if (range.start < 1) {
                    showError(`‡∏ä‡πà‡∏ß‡∏á‡∏ó‡∏µ‡πà ${i + 1}: ‡πÑ‡∏°‡πâ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô‡∏ï‡πâ‡∏≠‡∏á‡∏°‡∏≤‡∏Å‡∏Å‡∏ß‡πà‡∏≤‡∏´‡∏£‡∏∑‡∏≠‡πÄ‡∏ó‡πà‡∏≤‡∏Å‡∏±‡∏ö 1`);
                    return false;
                }
                
                if (range.end < range.start) {
                    showError(`‡∏ä‡πà‡∏ß‡∏á‡∏ó‡∏µ‡πà ${i + 1}: ‡πÑ‡∏°‡πâ‡∏™‡∏¥‡πâ‡∏ô‡∏™‡∏∏‡∏î‡∏ï‡πâ‡∏≠‡∏á‡∏°‡∏≤‡∏Å‡∏Å‡∏ß‡πà‡∏≤‡∏´‡∏£‡∏∑‡∏≠‡πÄ‡∏ó‡πà‡∏≤‡∏Å‡∏±‡∏ö‡πÑ‡∏°‡πâ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏ï‡πâ‡∏ô`);
                    return false;
                }
                
                if (range.end > numberOfTrades) {
                    showError(`‡∏ä‡πà‡∏ß‡∏á‡∏ó‡∏µ‡πà ${i + 1}: ‡πÑ‡∏°‡πâ‡∏™‡∏¥‡πâ‡∏ô‡∏™‡∏∏‡∏î (${range.end}) ‡πÄ‡∏Å‡∏¥‡∏ô‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡πÑ‡∏°‡πâ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î (${numberOfTrades})`);
                    return false;
                }
                
                if (i > 0 && range.start <= sorted[i - 1].end) {
                    showError(`‡∏ä‡πà‡∏ß‡∏á‡∏ó‡∏µ‡πà ${i + 1} ‡∏ó‡∏±‡∏ö‡∏ã‡πâ‡∏≠‡∏ô‡∏Å‡∏±‡∏ö‡∏ä‡πà‡∏ß‡∏á‡∏ó‡∏µ‡πà ${i}`);
                    return false;
                }
            }
            
            return true;
        }

        function getDistanceForTrade(tradeNumber, ranges) {
            for (let range of ranges) {
                if (tradeNumber >= range.start && tradeNumber <= range.end) {
                    return range.distance;
                }
            }
            return 0;
        }

        function generateTable(lotSize, numberOfTrades, ranges) {
            const tableBody = document.getElementById('tableBody');
            const mt4Output = document.getElementById('mt4Output');
            tableBody.innerHTML = '';
            mt4Output.textContent = '';

            let cumulativeLoss = 0;
            let cumulativePoints = 0;
            let outputText = '';
            let currentRangeIndex = 0;

            for (let i = 1; i <= numberOfTrades; i++) {
                const row = document.createElement('tr');
                
                const distance = getDistanceForTrade(i, ranges);
                
                if (i > 1) {
                    cumulativePoints += distance;
                }
                
                const individualLoss = -1 * (cumulativePoints / 100) * (lotSize / 0.01);
                cumulativeLoss += individualLoss;

                let isRangeChange = false;
                if (currentRangeIndex < ranges.length - 1 && i === ranges[currentRangeIndex + 1].start) {
                    isRangeChange = true;
                    currentRangeIndex++;
                }

                row.className = isRangeChange ? 'range-change' : '';
                row.innerHTML =
                    '<td>' + i + '</td>' +
                    '<td class="point">' + cumulativePoints.toLocaleString() + '</td>' +
                    '<td class="loss">' + individualLoss.toFixed(2) + '</td>' +
                    '<td class="loss">' + cumulativeLoss.toFixed(2) + '</td>';

                tableBody.appendChild(row);

                outputText += `input double LossLevel${i - 1} = ${cumulativeLoss.toFixed(2)};\n`;
            }

            mt4Output.textContent = outputText.trim();
            return cumulativeLoss;
        }

        function updateSummary(lotSize, rangeCount, numberOfTrades, totalLoss) {
            document.getElementById('displayLotSize').textContent = lotSize;
            document.getElementById('displayRanges').textContent = rangeCount + ' ‡∏ä‡πà‡∏ß‡∏á';
            document.getElementById('displayTrades').textContent = numberOfTrades + ' ‡πÑ‡∏°‡πâ';
            document.getElementById('displayTotalLoss').textContent = '$' + totalLoss.toFixed(2);
        }

        function calculateTable() {
            const lotSize = parseFloat(document.getElementById('lotSize').value);
            const numberOfTrades = parseInt(document.getElementById('numberOfTrades').value);

            if (lotSize <= 0 || numberOfTrades <= 0) {
                showError('‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏õ‡πâ‡∏≠‡∏ô‡∏Ñ‡πà‡∏≤‡∏ó‡∏µ‡πà‡∏°‡∏≤‡∏Å‡∏Å‡∏ß‡πà‡∏≤ 0 ‡∏ó‡∏∏‡∏Å‡∏ä‡πà‡∏≠‡∏á');
                return;
            }

            if (numberOfTrades > 500) {
                showError('‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡πÑ‡∏°‡πâ‡πÑ‡∏°‡πà‡∏Ñ‡∏ß‡∏£‡πÄ‡∏Å‡∏¥‡∏ô 500 ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏õ‡∏£‡∏∞‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡∏†‡∏≤‡∏û‡∏Ç‡∏≠‡∏á‡∏£‡∏∞‡∏ö‡∏ö');
                return;
            }

            const rangeItems = document.getElementsByClassName('range-item');
            const ranges = [];

            for (let item of rangeItems) {
                const start = parseInt(item.querySelector('.range-start').value);
                const end = parseInt(item.querySelector('.range-end').value);
                const distance = parseInt(item.querySelector('.range-distance').value);

                ranges.push({ start, end, distance });
            }

            if (!validateRanges(ranges, numberOfTrades)) {
                return;
            }

            const totalLoss = generateTable(lotSize, numberOfTrades, ranges.sort((a, b) => a.start - b.start));
            updateSummary(lotSize, ranges.length, numberOfTrades, totalLoss);
        }

        document.addEventListener('DOMContentLoaded', function () {
            addRange();
            calculateTable();
            document.getElementById('calculateBtn').addEventListener('click', calculateTable);
            document.addEventListener('keypress', function (e) {
                if (e.key === 'Enter') calculateTable();
            });
        });
    </script>
